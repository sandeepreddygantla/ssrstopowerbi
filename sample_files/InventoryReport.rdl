<?xml version="1.0" encoding="utf-8"?>
<Report xmlns="http://schemas.microsoft.com/sqlserver/reporting/2008/01/reportdefinition" 
        xmlns:rd="http://schemas.microsoft.com/SQLServer/reporting/reportdesigner">
  <DataSources>
    <DataSource Name="InventoryDataSource">
      <ConnectionProperties>
        <DataProvider>SQL</DataProvider>
        <ConnectString>Data Source=INVENTORY-SERVER\SQLEXPRESS;Initial Catalog=INVENTORY_DB</ConnectString>
        <IntegratedSecurity>true</IntegratedSecurity>
      </ConnectionProperties>
      <rd:DataSourceID>d2e4fbaf-6f4d-6d54-acc3-d6df9aa3ffc2</rd:DataSourceID>
    </DataSource>
  </DataSources>
  <DataSets>
    <DataSet Name="InventoryDataSet">
      <Fields>
        <Field Name="ProductID"><DataField>ProductID</DataField><rd:TypeName>System.Int32</rd:TypeName></Field>
        <Field Name="ProductName"><DataField>ProductName</DataField><rd:TypeName>System.String</rd:TypeName></Field>
        <Field Name="Category"><DataField>Category</DataField><rd:TypeName>System.String</rd:TypeName></Field>
        <Field Name="StockQuantity"><DataField>StockQuantity</DataField><rd:TypeName>System.Int32</rd:TypeName></Field>
        <Field Name="ReorderLevel"><DataField>ReorderLevel</DataField><rd:TypeName>System.Int32</rd:TypeName></Field>
        <Field Name="UnitCost"><DataField>UnitCost</DataField><rd:TypeName>System.Double</rd:TypeName></Field>
        <Field Name="TotalValue"><DataField>TotalValue</DataField><rd:TypeName>System.Double</rd:TypeName></Field>
        <Field Name="LastUpdated"><DataField>LastUpdated</DataField><rd:TypeName>System.DateTime</rd:TypeName></Field>
      </Fields>
      <Query>
        <DataSourceName>InventoryDataSource</DataSourceName>
        <CommandText>SELECT ProductID, ProductName, Category, StockQuantity, ReorderLevel, 
                            UnitCost, (StockQuantity * UnitCost) as TotalValue, LastUpdated
                     FROM Inventory 
                     WHERE StockQuantity > 0
                     ORDER BY Category, ProductName</CommandText>
      </Query>
    </DataSet>
  </DataSets>
  <Body>
