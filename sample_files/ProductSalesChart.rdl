    <DataSource Name="DataSource1">
      <ConnectionProperties>
        <DataProvider>SQL</DataProvider>
        <ConnectString>Data Source=MSI\EPIC;Initial Catalog=SSRS_DEMO_DB</ConnectString>
        <IntegratedSecurity>true</IntegratedSecurity>
      </ConnectionProperties>
      <rd:DataSourceID>c0d2eaae-4f2c-4c32-8cc1-b4be78829db0</rd:DataSourceID>
    </DataSource>
